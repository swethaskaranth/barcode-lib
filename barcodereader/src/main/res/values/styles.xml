<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ToolbarTheme"  parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SwitchStyle" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/green</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/red</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/gray_track</item>
    </style>
</resources>